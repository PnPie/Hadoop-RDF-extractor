#!/usr/bin/env python

import os
import sys

# hadoop = "/home/yu/Programs/hadoop-standalone/bin/hadoop"
if len(sys.argv) != 3:
    print "Please pass 2 arguments as hadoop binary execution file and input folder:" \
          "\nbin/TripleCount $(PATH_TO_HADOOP) $(INPUT_FOLDER)"
    sys.exit(1)

hadoop = sys.argv[1]
jar = "target/word-count-rdf-1.0-SNAPSHOT.jar"
class_name = "TripleCount"
input_foler = sys.argv[2]
output_folder = "output"

os.system("%s jar %s %s %s %s" % (hadoop, jar, class_name, input_foler, output_folder))
